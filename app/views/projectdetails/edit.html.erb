<!--Body-->
	<div class="container">
		<h1>Edit Schedule Information</h1>
        <% form_for(@projectdetail) do |f| %>
		<table class="data">
            <tr>
                <td colspan="7">
                    <div class="clearfix">
                        <%= f.error_messages %>
                    </div>                  
                </td>
            </tr>
			<tr>
				<td colspan="7">
					<div class="data-entry-form">
						<div class="month-year">
							<ol>
								<li>
									<label>Month</label>
                                    <select id="projectdetail_month_1i" name="projectdetail[month(2i)]">
                                      <option value="1" <% if @month == 1 %> selected="True" <% end %>>January</option>
                                      <option value="2" <% if @month == 2 %> selected="True" <% end %>>February</option>
                                      <option value="3" <% if @month == 3 %> selected="True" <% end %>>March</option>
                                      <option value="4" <% if @month == 4 %> selected="True" <% end %>>April</option>
                                      <option value="5" <% if @month == 5 %> selected="True" <% end %>>May</option>
                                      <option value="6" <% if @month == 6 %> selected="True" <% end %>>June</option>
                                      <option value="7" <% if @month == 7 %> selected="True" <% end %>>July</option>
                                      <option value="8" <% if @month == 8 %> selected="True" <% end %>>August</option>
                                      <option value="9" <% if @month == 9 %> selected="True" <% end %>>September</option>
                                      <option value="10" <% if @month == 10 %> selected="True" <% end %>>October</option>
                                      <option value="11" <% if @month == 11 %> selected="True" <% end %>>November</option>
                                      <option value="12" <% if @month == 12 %> selected="True" <% end %>>December</option>
                                    </select>
								</li>
                                <li class="year-input">
                                    <label>Year</label>
                                    <select id="projectdetail_month_2i" name="projectdetail[month(1i)]">
                                           <% @currentyear.upto(@currentyear + 10) do |m| %>
                                                <option value="<%=  m %>" <% if m == @year %> selected="True" <% end %> ><%=  m %></option>
                                            <% end %>
                                    </select>
                                    <select id="projectdetail_month_3i" name="projectdetail[month(3i)]" style="display:none;">
                                        <option value="1" selected="true">1</option>
                                    </select>
                                </li>
							</ol>
						</div>
                         <div class="clearfix">
    						<ol>
	    						<li>
		    						<label for="field_2">Original Baseline Plan</label>
			    					<%= f.text_field :OriginalBaselinePlan, :id => "field_2", :class => "normal-textfield" %>
				    			</li>
					    		<li>
						    		<label for="field_4">LRE Site</label>
                                    <%= f.text_field :LreSite, :id => "field4", :class => "normal-textfield" %>
    							</li>
                                <li>
		    						<label for="field_5">LRE PMC</label>
			    					<%= f.text_field :LrePmc, :id => "field5", :class => "normal-textfield" %>
                                </li>
					    		<li>
						    		<label for="field_6">Actual Cost</label>
                                    <%= f.text_field :Ac, :id => "field6", :class => "normal-textfield" %>
                                </li>
                                <li>
						    		<label for="field_7">Internal Issues</label>
                                    <%= f.text_field :InternalIssues, :id => "field7", :class => "normal-textfield" %>
                                </li>
                                <li>
						    		<label for="field_8">External Issues</label>
                                    <%= f.text_field :ExternalIssues, :id => "field8", :class => "normal-textfield" %>
                                </li>
	    						<li>
		    						<label for="field_9">Percentage Progress</label>
                                    <%= f.text_field :PercentageProgress, :id => "field9", :class => "normal-textfield" %>
                                </li>
                                <li>
                                    <input type="submit" class="submit" value="Save Schedule Information" />
                                    <span>or <%= link_to 'Cancel', projectdetails_path %></span>
                                </li>
	    					</ol>
                        </div>
					</div>
				</td>
			</tr>
		</table>
        <% end %>
	</div>